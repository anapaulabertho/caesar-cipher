{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"outDir": "bin",
		"sourceMap": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"isolatedModules": false,      
		"lib": [ 
			"es6", 
			"dom" 
		]
	},
	"include": [
		"src/**/*",
		"test/**/*"
	],
	"exclude": [
		"node_modules",
		"test"
	]
}